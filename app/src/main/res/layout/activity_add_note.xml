<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.barthelemy.smartbookmarks.AddNoteActivity"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spLivres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrez votre commentaire ci-dessous :"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="112dp"
        android:layout_below="@+id/spLivres"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:id="@+id/txtAvis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="159dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="242dp"
        android:layout_above="@+id/btnHome"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accueil"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="484dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
